# Elasticsearch Configuration
ELASTIC_CLOUD_ID=your_cloud_id_here
ELASTIC_API_KEY=your_api_key_here

# Elastic Agent Builder
ELASTIC_AGENT_BUILDER_URL=https://your-agent-url.elastic.co
ELASTIC_AGENT_ID=your_agent_id_here

# Optional: Elasticsearch Direct Connection (alternative to Cloud ID)
# ELASTICSEARCH_URL=https://your-elasticsearch-url:9200
# ELASTICSEARCH_USERNAME=elastic
# ELASTICSEARCH_PASSWORD=your_password

# Application Configuration
NEXT_PUBLIC_APP_NAME=ElasticSentinel
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags (optional)
ENABLE_DEMO_MODE=true
MAX_INVESTIGATION_TIME=30000

# Development (optional)
# NODE_ENV=development
